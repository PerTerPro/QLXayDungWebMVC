@model QLXayDungWebMVC.Models.NhanVien

@{
    ViewBag.Title = "Thông tin nhân viên: " + @Model.HoTen;
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section NhanVien{
    <li class="treeview active">
        <a href="#">
            <i class="fa fa-users"></i>
            <span>Nhân Sự</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
            <li><a href="~/NhanVien/Create"><i class="fa fa-circle-o"></i> Thêm hồ sơ</a></li>
            <li class="active"><a href="~/NhanVien/Index"><i class="fa fa-circle-o"></i> Danh sách nhân viên</a></li>
        </ul>
    </li>
}

@using (Html.BeginForm("Edit" + "/" + @Model.IdNV, "NhanVien", FormMethod.Get))             //Gọi Action Edit khi nhấn Button để Get ID
{
    @*@Html.AntiForgeryToken()*@                                        //Không thể dùng khi sử dụng nhảy Action
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Thông tin nhân viên: @Model.HoTen
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
        </h1>
        @*<ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> DashBoard</a></li>
            <li><a href="#">Nhân sự</a></li>
            <li class="active">Thêm nhân viên</li>
        </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <!-- Profile Image -->
                <div class="box box-info">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="~/Content/NhanVien/@Model.AnhNV" id="AnhNV">

                        <div class="box-footer">
                            @Html.Raw("<a href='/NhanVien/Edit/" + Model.IdNV + "' title='Edit'> <span class='btn btn-info btn-block pull-right'>Edit</span> </a>")
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->

            <div class="col-md-9">

                <div class="box box-info">
                    <form class="form-horizontal">

                        <div class="box-header with-border">
                            <h3 class="box-title">Thông tin nhân viên</h3>
                        </div>

                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Họ Tên</label>
                                        @*<input type="text" class="form-control" disabled placeholder="Company" value="Creative Code Inc.">*@
                                        @*@Html.TextBoxFor(model => model.Username, new { @class = "form-control" , disabled = "disabled"})   dùng cho MVC 5.0*@
                                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", disabled = "disabled"  } })
                                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Số Chứng Minh Thư</label>
                                        @Html.EditorFor(model => model.CMT, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.CMT, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Điện Thoại</label>
                                        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" , disabled = "disabled"} })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Quê Quán</label>
                                        @Html.EditorFor(model => model.QueQuan, new { htmlAttributes = new { @class = "form-control", disabled = "disabled"} })
                                        @Html.ValidationMessageFor(model => model.QueQuan, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Ngày sinh</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", disabled = "disabled"} })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled"} })
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Trình độ học vấn</label>
                                        @Html.EditorFor(model => model.TrinhDo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.TrinhDo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Bắt đầu hợp đồng</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.EditorFor(model => model.NgayBatDauHD, new { htmlAttributes = new { @class = "form-control" , disabled = "disabled"} })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.NgayBatDauHD, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Kết thúc hợp đồng</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.EditorFor(model => model.NgayKetThucHD, new { htmlAttributes = new { @class = "form-control" , disabled = "disabled"} })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.NgayKetThucHD, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div><label>Mô tả</label></div>
                                        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", @rows = 5, disabled = "disabled" })
                                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Phòng Ban</label>
                                        <input type="text" value="@ViewBag.PhongBan" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="clearfix"></div>
                    </form>

                </div>
            </div>
            <!-- /.col -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
   
}

