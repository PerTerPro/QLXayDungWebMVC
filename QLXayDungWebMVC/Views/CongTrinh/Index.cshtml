@model IEnumerable<QLXayDungWebMVC.Models.CongTrinh>

@{
    ViewBag.Title = "Danh Sách Công Trình";
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $('#table').DataTable({
            "language": {
                "search": "Search:",
                "searchPlaceholder": "Nhập thông tin...",
                "zeroRecords": "Không có thông tin nào thỏa mãn điều kiện tìm kiếm..."
            }
        });
    });
</script>

<script src="~/Content/PopupWindow.js"></script>
}

@section CongTrinh
{
    <li class="treeview active">
        <a href="#">
            <i class="fa fa-rocket"></i> <span>Công Trình</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
            <li><a href="~/CongTrinh/Create"><i class="fa fa-circle-o"></i> Thêm Công Trình</a></li>
            <li class="active"><a href="~/CongTrinh/Index"><i class="fa fa-circle-o"></i> Danh sách công trình</a></li>
        </ul>
    </li>
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Danh Sách Công Trình
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="#">Nhân sự</a></li>
        <li class="active">Danh Sách Công Trình</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a href="/CongTrinh/Create"><button class="btn btn-info glyphicon glyphicon-plus" title="Thêm Công Trình"></button></a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="table" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ảnh đại diện</th>
                                <th>Tên Công Trình</th>
                                <th>Mô Tả</th>
                                <th>Ngày Cấp Phép</th>
                                <th>Ngày Bắt Đầu</th>
                                <th>Ngày Kết Thúc</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var congtrinh in Model)
                            {
                                <tr>
                                    <td>@congtrinh.IdCT</td>
                                    <td><img src="~/Content/CongTrinh/@congtrinh.Image" style="width:50px;height:auto" /></td>
                                    <td>@congtrinh.TenCT</td>
                                    <td>@congtrinh.MoTaCT</td>
                                    <td>@congtrinh.NgayCapPhep.ToString("dd/MM/yyyy")</td>
                                    <td>@congtrinh.NgayBatDau.ToString("dd/MM/yyyy")</td>
                                    <td>@congtrinh.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @*@Html.ActionLink("Sửa", "Edit", new { id = congtrinh.IdCT }) |
                                        @Html.ActionLink("Chi Tiết", "Details", new { id = congtrinh.IdCT }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = congtrinh.IdCT })|*@
                                        @Html.Raw("<a data-url='' href='/CongTrinh/Details/" + congtrinh.IdCT + "' id='" + congtrinh.IdCT + "' title='Detail'> <span class='glyphicon glyphicon-search'> </span> </a>") |
                                        @Html.Raw("<a href='/CongTrinh/Edit/" + congtrinh.IdCT + "' id='" + congtrinh.IdCT + "' title='Edit'> <span class='glyphicon glyphicon-edit'> </span> </a>") |
                                        @Html.Raw("<a data-url='' href='/CongTrinh/Delete/" + congtrinh.IdCT + "' id='" + congtrinh.IdCT + "' title='Delete'> <span class='glyphicon glyphicon-trash'> </span> </a>") |
                                        @Html.ActionLink("Danh sách nhân công", "DanhSachNhanSu","ChamCong", new { id = congtrinh.IdCT } , null)
                                    </td>

                                </tr>


                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Ảnh đại diện</th>
                                <th>Tên Công Trình</th>
                                <th>Mô Tả</th>
                                <th>Ngày Cấp Phép</th>
                                <th>Ngày Bắt Đầu</th>
                                <th>Ngày Kết Thúc</th>
                                <th>Chức năng</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
